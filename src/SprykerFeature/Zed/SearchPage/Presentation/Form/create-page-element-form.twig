<spy-form
        class="spy-layout sparse"
        src="/search-page/form/create-page-element"
        name="page-attribute-create-form"
        channel="page-attribute"
        >
    <h3>Add Page Attribute</h3>

    <div spy-input-text="field.key_name" options="{ label : 'Key Name' }"></div>
    <div spy-input-switch="field.is_attribute_active" options="{ label : 'Is active' }"></div>
    <div spy-input-select="field.fk_search_document_attribute" options="{ label : 'Document Attribute' }"></div>
    <div spy-input-select="field.fk_search_attribute_template" options="{ label : 'Template' }"></div>

    <div class="spy-layout buttons">
        <button ng-if=" create" class="button default" ng-disabled="query" ng-click="update()">Create</button>
    </div>
</spy-form>